<!DOCTYPE html>
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'apple-mobile-web-app-capable', :content => 'yes'}
    %meta{:name => 'apple-mobile-web-app-status-bar-style', :content => 'black'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'}

    %title Splash
    %link{:href => "/favicon.ico", :rel => "icon", :type => "image/x-icon"}
    %link{:href => "/css/mobile.css?#{Time.now.to_i}", :rel => "stylesheet", :type => "text/css"}    

    /%script{:src => 'http://maps.googleapis.com/maps/api/js?sensor=true&region=CA'}
    = js :mobile

    <body ontouchstart="">
    #header
    
    #content{:style => 'width: 100%; height: 100%; overflow-x: hidden;'}
      = ''
    
    %script{:id => 'about-view-template', :type => 'text/x-handlebars-template'}
      = partial('mobile/about')

    %script{:id => 'index-view-template', :type => 'text/x-handlebars-template'}
      = partial('mobile/footer')

    %script{:id => 'header-button-template', :type => 'text/x-handlebars-template'}
      != "<div class='btn animatable {{num}} new-{{dir}}'>"
      %a{:href => '#'}
        = img '/images/{{image_name}}.png', {:style => '{{style}}'}
      != "</div>"
    
    %script{:id => 'headline-template', :type => 'text/x-handlebars-template'}
      != "<div class='headline animatable {{num}} new-{{dir}}'>{{headline}}</div>"
    
    %script{:id => 'search-view-template', :type => 'text/x-handlebars-template'}
      = partial('mobile/search')